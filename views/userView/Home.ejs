            <section class="product-tabs position-relative wow fadeIn animated">
                <div class="container">
                    <div class="tab-header">

                        <a href="#" class="view-more d-none d-md-flex">View More<i
                                class="fi-rs-angle-double-small-right"></i></a>
                    </div>
                    <!--End nav-tabs-->
                    <div class="tab-content wow fadeIn animated" id="myTabContent">
                        <div class="tab-pane fade show active" id="tab-one" role="tabpanel" aria-labelledby="tab-one">
                            <div class="row product-grid-4">
                                <% if (!product) { %>
                                    <div>
                                        <p>product Not Found</p>
                                    </div>
                                    <% } else { %>
                                        <% for( let i=0; i < product.length; i++ ) { %>
                                            <div class="col-lg-3 col-md-4 col-12 col-sm-6">
                                                <div class="product-cart-wrap mb-30">
                                                    <div class="product-img-action-wrap">
                                                        <div class="product-img product-img-zoom">
                                                            <a href="/productShop?id=<%= product[i]._id %>">
                                                                <img class="default-img"
                                                                    src="/productImages/<%= product[i].image[0].filename %>"
                                                                    alt="" style="height: 200px;">
                                                                <img class="hover-img"
                                                                    src="/productImages/<%= product[i].image[0].filename %>"
                                                                    alt="" style="height: 200px;">
                                                            </a>
                                                        </div>
                                                        <div class="product-action-1">
                                                            <a aria-label="Quick view" class="action-btn hover-up"
                                                                data-bs-toggle="modal"
                                                                data-bs-target="#quickViewModal"><i
                                                                    class="fi-rs-eye"></i></a>
                                                            <button aria-label="Add To Wishlist"
                                                                class="action-btn hover-up"
                                                                onclick="addToWishlist('<%= product[i]._id %>')"><i
                                                                    class="fi-rs-heart"></i></button>
                                                            <a aria-label="Compare" class="action-btn hover-up"
                                                                href="shop-compare.html"><i
                                                                    class="fi-rs-shuffle"></i></a>
                                                        </div>
                                                        <div
                                                            class="product-badges product-badges-position product-badges-mrg">
                                                            <span class="hot">Hot</span>
                                                        </div>
                                                    </div>
                                                    <div class="product-content-wrap">
                                                        <div class="product-name">
                                                            <a href="shop-grid-right.html">
                                                                <%= product[i].productName %>
                                                            </a>
                                                        </div>
                                                        <h2><a href="/productShop"></a></h2>
                                                        <div class="rating-result" title="90%">
                                                            <span>
                                                                <span>90%</span>
                                                            </span>
                                                        </div>
                                                        <div class="product-price">
                                                            <span>&#8377;<%= product[i].salePrice %></span>
                                                            <span class="old-price">&#8377;<%= product[i].orginalPrice
                                                                    %>
                                                            </span>
                                                        </div>
                                                        <div class="product-action-1 show">
                                                            <button aria-label="Add To Cart" class="action-btn hover-up"
                                                                onclick="addToCart('<%= product[i]._id %>')"><i
                                                                    class="fi-rs-shopping-bag-add"></i></button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <% } %>

                                                <% } %>
                            </div>
                            <!--End product-grid-4-->
                        </div>
                        <!--En tab one (Featured)-->
                    </div>
                    <!--End tab-content-->
                </div>
            </section>      
            <section class="mb-50">
                <div class="container">
                    <div class="row">
                        <div class="col-12">
                            <div class="banner-bg wow fadeIn animated"
                                style="background-image: url('assets/imgs/banner/banner-8.jpg')">
