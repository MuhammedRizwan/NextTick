            const imageError = document.getElementById('imageError');

            const textAreaRegex = /(?:[^\d\W_]*[a-zA-Z]){6,}/;

            // Name field
            if (product_name.value.trim() === '') {
                productNameError.innerHTML = 'Field is required';
                setTimeout(() => {
