<%- include('../adminLayout/header') %>
    <section class="content-main">
        <div class="content-header">
            <div>
                <h2 class="content-title card-title">Users</h2>
                <p>Delete Block and Unblock User</p>
            </div>
            <div>
                <input type="text" placeholder="Search Categories" class="form-control bg-white">
            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="table-responsive">
                            <form action="">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>E-mail</th>
                                            <th>Phone</th>
                                            <th>Status</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if (users) { %>
                                            <% for( let i=0; i < users.length; i++ ) { %>
                                                <tr>
                                                    <td><b>
                                                            <%= users[i].name %>
                                                        </b></td>
                                                    <td>
                                                        <%= users[i].email %>
                                                    </td>
                                                    <td>
                                                        <%= users[i].phone %>
                                                    </td>
                                                    <td>
                                                        <% if (users[i].is_block==false) { %>
                                                            <span
                                                                class="badge badge-pill badge-soft-danger ">Unblocked</span>
                                                            <% } else { %>
                                                                <span
                                                                    class="badge badge-pill badge-soft-success">Blocked</span>
                                                                <% } %>
                                                    </td>
                                                    <td>
                                                        <button type="button"
                                                            class="toggle-user-btn btn btn-sm font-sm rounded <%= users[i].is_block ? 'btn-danger' : 'btn-success' %>"
                                                            data-user-id="<%= users[i]._id %>"
                                                            data-toggle-action="<%= users[i].is_block ? 'unblock' : 'block' %>">
                                                            <%= users[i].is_block ? 'Unblock' : 'Block' %>
                                                        </button>
                                                    </td>
                                                    <td>
                                                        <button type="button"
                                                            onclick="confirmDelete('<%= users[i]._id%>')"
                                                            class="btn btn-xs">Delete</a>
                                                    </td>
                                                </tr>

                                                <% } %>
                                                    <% } else { %>
                                                        <div class="col-12 text-center text-danger fw-600">User Not
                                                            Found</div>
                                                        <% } %>
                                    </tbody>
                                </table>
                            </form>
                        </div>
                    </div> <!-- .col// -->
                </div> <!-- .row // -->
            </div> <!-- card body .// -->
        </div> <!-- card .// -->
    </section> <!-- content-main end// -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Add a script for handling AJAX requests -->
    <script>
        $(document).ready(function () {
            $('.toggle-user-btn').click(function () {
                const userId = $(this).data('user-id');
                const toggleAction = $(this).data('toggle-action');
                Swal.fire({
                    title: "Are you sure?",
                    text: `Are you sure you want to ${toggleAction} this user?`,
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: `Yes,${toggleAction} it!`
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            type: 'PUT',
                            url: `/admin/${toggleAction}-user`,
                            data: { userId: userId },
                            success: function (response) {
                                // Handle success, you can show a success message or update UI
                                Swal.fire({
                                    position: "center",
                                    icon: "success",
                                    title: `user were ${toggleAction}.`,
                                    showConfirmButton: false,
                                    timer: 1500
                                });
                                // Update the button color and text based on the action
                                // const buttonText = toggleAction === 'block' ? 'Unblock' : 'Block';
                                // const buttonColor = toggleAction === 'block' ? 'btn-danger' : 'btn-success';

                                // // Update button text and color
                                // $(`.toggle-user-btn[data-user-id="${userId}"]`).text(buttonText).removeClass('btn-danger btn-success').addClass(buttonColor); 
                                setTimeout(function () {
                                    location.reload();
                                }, 1000);
                            },
                            error: function (error) {
                                console.log(`Error ${toggleAction}ing user:`, error);
                            },
                        });
                    } else {
                        Swal.fire({
                            title: `Canceled`,
                            text: `canceled your Action.`,
                            icon: "error"
                        });
                    }

                });
            });
        });
    </script>
    <script>
        function confirmDelete(userId) {
            Swal.fire({
                title: "Are you sure?",
                text: "You won't be able to revert this!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, delete it!"
            }).then((result) => {
                if (result.isConfirmed) {
                    fetch(`/admin/delete/${userId}`, { method: 'DELETE' })
                        .then((res) => {
                            if (res.ok) {
                                Swal.fire({
                                    title: "Deleted!",
                                    text: "user were Deleted.",
                                    icon: "success"
                                });
                                setTimeout(function () {
                                    location.reload();
                                }, 1000);
                            } else {
                                Swal.fire({
                                    title: "eror!",
