    /* Footer Styling */
    footer.main {
      background: #ffffff;
      color: #333;
      font-family: 'Poppins', sans-serif;
      padding-top: 15px;
      box-shadow: 0 -2px 5px rgba(0, 0, 0, 0.1);
    }

    /* Newsletter Section */
    .newsletter {
      background: #f8f9fa;
      padding: 20px 0;
      text-align: center;
    }
    .newsletter h3 {
      font-size: 20px;
      margin-bottom: 10px;
      font-weight: 600;
      color: #1a3c34; /* Changed to dark green */
    }
    .newsletter p {
      font-size: 12px;
      margin-bottom: 15px;
      color: #555;
    }
    .newsletter-form {
      max-width: 400px;
      margin: 0 auto;
      display: flex;
      gap: 8px;
    }
    .newsletter-form input {
      padding: 8px;
      border: 1px solid #ddd;
      border-radius: 20px;
      flex: 1;
      font-size: 12px;
    }
    .newsletter-form button {
      padding: 8px 20px;
      background: #1a3c34; /* Changed to dark green */
      border: none;
      border-radius: 20px;
      color: #fff;
      font-weight: 600;
      font-size: 12px;
      cursor: pointer;
      transition: background 0.3s ease;
    }
    .newsletter-form button:hover {
      background: #132c27; /* Changed to darker green */
    }

    /* Footer Mid Section */
    .footer-mid {
      padding: 20px 0;
    }
    .footer-mid .widget-about .logo img {
      max-width: 20px;
      border-radius: 50%;

      transition: transform 0.3s ease;
    }
    .footer-mid .widget-about .logo img:hover {
      transform: scale(1.1);
    }
    .footer-mid h5 {
      font-size: 16px;
      font-weight: 600;
      margin-bottom: 15px;
      color: #1a3c34; /* Changed to dark green */
    }
    .footer-mid p {
      font-size: 12px;
      line-height: 1.6;
      color: #555;
    }
    .footer-mid .footer-list li {
      margin-bottom: 8px;
    }
    .footer-mid .footer-list a {
      color: #555;
      font-size: 12px;
      transition: color 0.3s ease;
    }
    .footer-mid .footer-list a:hover {
      color: #1a3c34; /* Changed to dark green */
      text-decoration: none;
    }

    /* Social Icons */
    .mobile-social-icon {
      display: flex;
      gap: 10px;
      margin-top: 15px;
    }
    .mobile-social-icon a {
      display: inline-block;
      width: 32px;
      height: 32px;
      line-height: 32px;
      text-align: center;
      background: #e9ecef;
      border-radius: 50%;
      transition: background 0.3s ease;
    }
    .mobile-social-icon a:hover {
      background: #1a3c34; /* Changed to dark green */
    }
    .mobile-social-icon img {
      width: 16px;
      vertical-align: middle;
    }

    /* Install App Section */
    .download-app {
      display: flex;
      gap: 10px;
      margin-bottom: 15px;
    }
    .download-app a img {
      max-width: 120px;
      transition: transform 0.3s ease;
    }
    .download-app a img:hover {
      transform: scale(1.05);
    }
    .payment-method img {
      max-width: 160px;
    }

    /* Footer Bottom */
    .footer-bottom {
      border-top: 1px solid #e9ecef;
      padding-top: 15px;
    }
    .footer-bottom p {
      font-size: 12px;
      color: #555;
    }
    .footer-bottom a {
      color: #1a3c34; /* Changed to dark green */
      transition: color 0.3s ease;
    }
    .footer-bottom a:hover {
      color: #132c27; /* Changed to darker green */
      text-decoration: none;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      .newsletter-form {
        flex-direction: column;
      }
      .newsletter-form input,
      .newsletter-form button {
        width: 100%;
      }
      .footer-mid .col-lg-4,
      .footer-mid .col-lg-2 {
        margin-bottom: 20px;
      }
      .footer-bottom p {
        text-align: center;
      }
    }
  </style>
