<style>
    /* Coupon Card Styling */
    .couponCard {
        width: 250px;
        height: 300px; /* Increased height for better spacing */
        padding: 20px;
        border-radius: 15px;
        background: linear-gradient(135deg, #f5f7fa 0%, #e4e7eb 100%); /* Subtle gradient background */
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1); /* Subtle shadow for depth */
        color: #333; /* Darker text for better contrast */
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        position: relative;
        transition: transform 0.3s ease, box-shadow 0.3s ease; /* Smooth hover animation */
        overflow: hidden;
    }

    .couponCard:hover {
        transform: scale(1.05); /* Slight scale-up on hover */
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15); /* Enhanced shadow on hover */
    }

    .couponCard h1 {
        font-size: 36px; /* Slightly smaller for better proportion */
        font-weight: bold;
        margin-bottom: 5px;
        color: #39f; /* Highlight the discount in blue */
    }

    .couponCard span.discount-label {
        font-size: 20px;
        font-weight: 500;
        margin-bottom: 10px;
    }

    .couponCard .expiry-date {
        font-size: 14px;
        color: #666; /* Muted color for secondary info */
        margin-bottom: 15px;
        text-align: center;
    }

    .couponCard .redeemed-text {
        font-size: 16px;
        color: #e74c3c; /* Red for redeemed status */
        font-weight: 500;
        margin-top: 10px;
    }

    .couponCard .code-text {
        font-size: 14px;
        color: #555;
        margin-bottom: 10px;
    }

    .image {
        position: absolute;
        opacity: 0.05; /* Reduced opacity for better readability */
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        object-fit: cover; /* Ensure the image fits properly */
    }

    /* Copy Button Styling */
    .copy-coupon-btn {
        background-color: #39f;
        color: white;
        border: none;
        padding: 8px 16px;
        border-radius: 5px;
        font-size: 14px;
        font-weight: 500;
        display: flex;
        align-items: center;
        gap: 5px;
        transition: background-color 0.3s ease, transform 0.1s ease;
    }

    .copy-coupon-btn:hover {
        background-color: #2577e5; /* Darker shade on hover */
        transform: translateY(-2px); /* Slight lift effect */
    }

    .copy-coupon-btn:active {
        transform: translateY(0); /* Reset on click */
    }

    /* Fade-in Animation for Cards */
    .couponCard {
        animation: fadeIn 0.5s ease-in-out;
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Responsive Adjustments */
    @media (max-width: 768px) {
        .couponCard {
            width: 100%;
            max-width: 300px;
            margin: 0 auto;
        }

        .couponContainer {
            margin-bottom: 20px;
        }
    }

    @media (max-width: 576px) {
        .couponCard h1 {
            font-size: 30px;
        }

        .couponCard span.discount-label {
            font-size: 18px;
        }

        .couponCard .expiry-date,
        .couponCard .code-text {
            font-size: 12px;
        }

        .copy-coupon-btn {
            padding: 6px 12px;
            font-size: 12px;
        }
    }
</style>

